@model FirstProject_ECommerce.Models.CartItem

<form asp-action="UpdateItem" method="post" asp-controller="Cart">

    <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" value="@Model.Id" />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control"  name="quantity" type="number" value="@Model.Quantity" min="1"/>
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" value="Save" class="btn btn-primary">Update</button> 
    </div>
</form>