@model IEnumerable<FirstProject_ECommerce.Models.Order>
<h2 style="color:brown; text-align:center"><i> Manage Orders</i></h2>
<table class="table text-center table-info" style="width: 87%; margin:auto">
	<thead>
		<tr>
			<th>Order Id</th>
			<th>User Id</th>
			<th>Total Amount</th>
			<th>Order Date </th>
			<th></th>
			<th>Action </th>
		</tr>
	</thead>
	<tbody>
@foreach(var order in Model)
{
<tr>
	<td>@order.Id</td>
	<td>@order.UserId</td>
	<td>@order.TotalAmount</td>
	<td>@order.OrderDate</td>
	<td>@order.OrderItems</td>
	<td>
		<a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">View</a>
		<a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm">Update Status</a>
		<a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm">Delete </a>

	</td>
</tr>
}
	</tbody>
</table>